<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullImageView"
        android:transitionName="newActivity"
        android:layout_gravity="center"
        ></com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView>

    <View
        android:id="@+id/bgView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1000000"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/texView"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Next \n \n 26 December 2023"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/arrowNext"
        ></TextView>

    <ImageView
        android:id="@+id/arrowNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:rotation="180"
        android:src="@drawable/arrow_back"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/texView"
       app:layout_constraintTop_toBottomOf="@id/texView"
      app:layout_constraintStart_toStartOf="@id/texView"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>